{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Personnalisation grille de temps activités{% endblock %}

{% block main %}
    <section class="housing-activity-form container my-5">
        <h1 class="ml-2 mb-4">Personnalisation grille de temps activités</h1>
        {{ form_start(form) }}
        <table class="table table-hover">
            <thead class="table-primary">
            <tr>
                <th class="pl-4"><i class="fas fa-briefcase mr-2"></i>Activité</th>
                <th class="text-center pr-5"><i class="fas fa-user-clock mr-2"></i>Temps dédié</th>
            </tr>
            </thead>
            <tbody>
            {{ form_errors(form) }}
            {% for activity in form.activities %}
                <tr>
                    <td>{{ form_label(activity, activity.vars.data.activity) }}</td>
                    <td class="form-fields">{{ form_widget(activity) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="buttons d-flex ml-2">
            {{ form_widget(form.Enregistrer) }}
            <a class="btn btn-sm btn-primary my-auto" href="{{ path('home') }}">Retour accueil</a>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
