{% extends 'layout.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block main %}
    <div class="adminManuals col">
        <div class="row justify-content-md-center">
            <div class="adminManuals col-6">
                <h1>Administration - Modifier le texte</h1>

                {% for manual in manuals %}

                    <div class="adminManuals card">
                        <div class="card-header">
                            <h2 class="card-title my-auto">{{ manual.title }}</h2>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ manual.text | nl2br }}</p>
                            <div class="float-right">
                                <a href="{{ path('manual_edit', {'id': manual.id}) }}">modifier</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                        <p>no records found</p>
                {% endfor %}

            </div>
            <div class="image">
                <img src="{{ asset('build/images/girl_with_headphones.png') }}" alt="girl with headphones">
            </div>
        </div>
    </div>
{% endblock %}
