<section class="manuals container-fluid">
    <div class="row">
        {% for manual in manuals %}
            <div class="card col mx-3 px-0">
                <div class="card-header">
                    <h3 class="card-title">{{ manual.title }}</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ manual.text }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</section>