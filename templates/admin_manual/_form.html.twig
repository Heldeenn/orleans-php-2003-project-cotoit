<section class="admin_manual_edit my-5">
    <div class="row justify-content-md-center">
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        <div class="adminManuals col-6">
            <h1>Administration - Modifier manuels</h1>

            {{ form_start(form) }}

            <div class="adminManuals card mb-5">
                <div class="card-header">
                    <h2 class="card-title my-auto">Mode d'emploi</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        {{ form_widget(form.instruction) }}
                        {{ form_errors(form.instruction) }}
                    </p>
                </div>
            </div>
            <div class="adminManuals card">
                <div class="card-header">
                    <h2 class="card-title my-auto">Mode de calcul</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        {{ form_widget(form.calculation) }}
                        {{ form_errors(form.calculation) }}
                    </p>
                </div>
            </div>
            <div class="container row justify-content-between">
                <a class="btn btn-primary ml-5"
                   href="{{ path('admin_manual_index') }}">Retour</a>
                <div class="mr-4">
                    <button type="reset" class="btn btn-sm btn-primary mr-5">Annuler modifications</button>
                    <button class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
        <div class="image">
            <img src="{{ asset('build/images/girl_with_headphones.png') }}" alt="girl with headphones">
        </div>
    </div>
    {{ tinymce_init(
        {theme:
            {'advanced':
                {
                    'language': app.request.locale,
                    'width': 800,
                    'height': 500,
                    content_css: '/build/app.css'
                }
            }
        }) }}
</section>
