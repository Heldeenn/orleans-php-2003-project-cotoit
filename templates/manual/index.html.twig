{% extends 'layout.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block main %}
    <div class="adminManuals container">
    <h1>Administration - Modifier le texte</h1>

<div class="row">
    <div class="manuals col">
        {% for manual in manuals %}

            <div class="adminManuals card">
                <div class="card-header">
                    <h3 class="card-title my-auto">{{ manual.title }}</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ manual.text | nl2br }}</p>
                    <div class="float-right">
                        <a href="{{ path('manual_edit', {'id': manual.id}) }}">modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
                <p>no records found</p>
        {% endfor %}

    </div>
    <div class="image">
        <img src="{{ asset('build/images/headphonesGirl.png') }}" alt="girl with headphones">
    </div>
</div>
    </div>
{% endblock %}
